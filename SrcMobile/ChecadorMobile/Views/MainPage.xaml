<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiAppChecador.ViewModels"
             x:Class="MauiAppChecador.Views.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="Inicio">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="{DynamicResource Primary}"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Â¡Bienvenido!"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="{Binding WelcomeMessage}"
                           FontSize="18"
                           TextColor="White"
                           Opacity="0.9" />
                </VerticalStackLayout>
            </Frame>

            <!-- Acciones Rapidas -->
            <Label Text="Acciones Rapidas"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,0" />

            <Grid RowDefinitions="Auto,Auto"
                  ColumnDefinitions="*,*"
                  RowSpacing="15"
                  ColumnSpacing="15">

                <!-- Nueva Carta -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="#F5F5F5"
                       CornerRadius="15"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ“"
                               FontSize="40"
                               HorizontalOptions="Center" />
                        <Label Text="Registrar asistencia"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToNewAttendanceCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Lista de Registros de Asistencia -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="#F5F5F5"
                       CornerRadius="15"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ“‹"
                               FontSize="40"
                               HorizontalOptions="Center" />
                        <Label Text="Mis Asistencias"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToListAttendancesCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Mi Perfil -->
                <Frame Grid.Row="1" Grid.Column="0"
                       BackgroundColor="#F5F5F5"
                       CornerRadius="15"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ‘¤"
                               FontSize="40"
                               HorizontalOptions="Center" />
                        <Label Text="Mi Perfil"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Configuracion -->
                <Frame Grid.Row="1" Grid.Column="1"
                       BackgroundColor="#F5F5F5"
                       CornerRadius="15"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="âš™ï¸"
                               FontSize="40"
                               HorizontalOptions="Center" />
                        <Label Text="Configuracion"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>

            </Grid>

            <!-- Informacion -->
            <Frame BackgroundColor="#F5F5F5"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="20"
                   Margin="0,20,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="â„¹ï¸ Informacion"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource Primary}" />
                    <Label Text="Sistema de Gestion de Asistencias"
                           FontSize="14" />
                    <Label Text="Version 1.0.0"
                           FontSize="12"
                           TextColor="{DynamicResource Gray600}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
